<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prenotazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prenotazione"
        android:textSize="25sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/giocatore1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giocatore 1"
        android:layout_below="@id/prenotazione"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/giocatore2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giocatore 2"
        android:layout_below="@id/giocatore1"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/giocatore3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giocatore 3"
        android:layout_below="@id/giocatore2"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/giocatore4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giocatore 4"
        android:layout_below="@id/giocatore3"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:layout_below="@id/giocatore4"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/orario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Orario"
        android:layout_below="@id/data"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/campo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Campo"
        android:layout_below="@id/orario"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/campo"
        android:background="@color/black" />



</RelativeLayout>